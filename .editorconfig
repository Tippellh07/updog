# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false
indent_style = space

[*.{json,yml,yaml}]
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.toml]
indent_size = 2
indent_style = space
